<h1>Hello World!</h1>

 <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.submit "Create" %>
<% end %>